{
  "name": "n32b-firmware-updater",
  "description": "N32B midi controller firmware updater",
  "version": "3.0.4",
  "author": {
    "name": "Shik",
    "email": "info@shik.tech",
    "url": "https://shik.tech"
  },
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "appId": "tech.shik.updater.firmware",
    "productName": "N32B Firmware updater",
    "copyright": "Copyright Â© 2025 SHIK",
    "files": [
      "build/**/*",
      "assets/icon.*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "./hexs/"
    ],
    "buildDependenciesFromSource": true
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.1",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "avrgirl-arduino": "^5.0.1",
    "electron-is-dev": "^2.0.0",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "serialport": "^11.0.0",
    "webmidi": "^3.1.8"
  },
  "scripts": {
    "start": "NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "build": "NODE_OPTIONS=--openssl-legacy-provider react-scripts build",
    "dist": "NODE_OPTIONS=--openssl-legacy-provider yarn build && electron-builder",
    "test": "NODE_OPTIONS=--openssl-legacy-provider react-scripts test",
    "eject": "NODE_OPTIONS=--openssl-legacy-provider react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"NODE_OPTIONS=--openssl-legacy-provider BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "electron": "^13.1.6",
    "electron-builder": "23.6.0",
    "wait-on": "^6.0.0"
  }
}